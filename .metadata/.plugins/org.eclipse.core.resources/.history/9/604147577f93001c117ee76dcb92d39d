package ensyu2_01;	//演習2-1　p32

/**
 * @author システム開発部
 *
 */
public class Ensyu2_01 {	//クラス宣言:Ensyu2_1

	public static void main(String[] args) {		//ここからmainメソッド
	}
	int x = 63.5, y = 18.2;		//変数宣言:int型のxとyに少数部をもつ実数値を初期設定

	System.out.println("xの値は" + x + "です。");			//コメント出力:xの値
	System.out.println("yの値は" + y + "です。");			//コメント出力:yの値
	System.out.println("合計は" + (x + y) + "です。");		//コメント出力:xとyの合計値
	System.out.println("平均は" + (x + y) / 2 + "です。");	//コメント出力:xとyの平均値
}
