package ensyu2_02;	//演習2-2　p32

public class Ensyu2_02 {	//クラス宣言:Ensyu2_2

	public static void main(String[] args) {		//ここからmainメソッド
		int x = 1, y = 2, z = 3;

		System.out.println("xの値は" + x + "です。");				//コメント出力:xの値
		System.out.println("yの値は" + y + "です。");				//コメント出力:yの値
		System.out.println("yの値は" + z + "です。");				//コメント出力:zの値
		System.out.println("合計は" + (x + y + z) + "です。");		//コメント出力:x,y,zの合計値
		System.out.println("平均は" + (x + y + z) / 3 + "です。");	//コメント出力:x,y,zの平均値
	}

}
